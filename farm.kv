#:kivy 1.9.1
#:import trunc math.trunc

<VeggieScreen>:

	Widget:
		canvas:
			Rectangle:
				size: self.size
				pos: self.pos
<FarmGame>:

	farm: farmfield

	GridLayout:

		size: root.size
		pos: root.pos

		cols: 1
		rows: 2

		Widget:
			size_hint_x: 1.0
			size_hint_y: 0.33
			width: self.parent.width
			height: self.parent.height * 1/3

			canvas:
				Rectangle:
					size: self.size
					pos: self.pos
					source: "images/sky2.png"

		FarmField:
			size_hint_x: 1.0
			size_hint_y: 0.66
			width: self.parent.width
			height: self.parent.height * 2/3
			id: farmfield


<FarmPlot>:
	
	canvas:
		Rectangle: 
			source: "images/" + str(self.plant.name) + ".png"
			size: self.size
			pos: self.pos	
	Label:
		text: str(trunc(self.parent.phosphor_level))
		size: self.parent.size
		pos: self.parent.pos


<FarmField>:

	plot1: pl1
	plot2: pl2
	plot3: pl3

	plot4: pl4
	plot5: pl5
	plot6: pl6

	plot7: pl7
	plot8: pl8
	plot9: pl9
	
	canvas:
			
		Rectangle:
			source: "images/meaddow.png"
			size: self.size
			pos: self.pos

	FarmPlot:
		id: pl1
		size: self.parent.width / 4 , self.parent.height / 4
		x: self.parent.x + self.parent.width / 24
		y: self.parent.y + self.parent.height / 24

	FarmPlot:
		id: pl2
		x: self.parent.x + self.parent.width /3 + self.parent.width / 24
		y: self.parent.y + self.parent.height / 24
		size: self.parent.width / 4 , self.parent.height / 4

	FarmPlot:
		id: pl3
		x: self.parent.x + self.parent.width * 2/3 + self.parent.width / 24
		y: self.parent.y + self.parent.height / 24
		size: self.parent.width / 4 , self.parent.height / 4

	FarmPlot:
		id: pl4
		size: self.parent.width / 4 , self.parent.height / 4
		x: self.parent.x + self.parent.width / 24
		y: self.parent.y + self.parent.height / 3 + self.parent.height / 24

	FarmPlot:
		id: pl5
		size: self.parent.width / 4 , self.parent.height / 4
		x: self.parent.x + self.parent.width /3 + self.parent.width / 24
		y: self.parent.y + self.parent.height / 3 + self.parent.height / 24

	FarmPlot:
		id: pl6
		size: self.parent.width / 4 , self.parent.height / 4
		x: self.parent.x + self.parent.width * 2 /3 + self.parent.width / 24
		y: self.parent.y + self.parent.height / 3 + self.parent.height / 24

	FarmPlot:
		id: pl7
		size: self.parent.width / 4 , self.parent.height / 4
		x: self.parent.x + self.parent.width / 24
		y: self.parent.y + self.parent.height * 2 / 3 + self.parent.height / 24

	FarmPlot:
		id: pl8
		size: self.parent.width / 4 , self.parent.height / 4
		x: self.parent.x + self.parent.width /3 + self.parent.width / 24
		y: self.parent.y + self.parent.height * 2 / 3 + self.parent.height / 24

	FarmPlot:
		id: pl9
		size: self.parent.width / 4 , self.parent.height / 4
		x: self.parent.x + self.parent.width * 2 / 3 + self.parent.width / 24
		y: self.parent.y + self.parent.height * 2 / 3 + self.parent.height / 24


