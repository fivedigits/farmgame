#:kivy 1.9.1
#:import trunc math.trunc
#:import trunc2 util.trunc2
#:import updown util.updown

<ResetButton>:

	text: "Triple tap to reset game"

<TitleScreen>:

	AnchorLayout:

		Image:
			allow_stretch: True
			size: max(root.width,root.height)*4/3,max(root.width,root.height)
			source: "images/Title.png"

		GridLayout:
			rows: 3
			cols: 1

			size_hint_x: 0.3
			size_hint_y: 0.8

			Label:
				text: "FarmGame"
				font_size: 32

			HelpButton:
				size_hint_y: 0.2
				text: "Help"

			ResetButton:
				size_hint_x: 0.3
				size_hint_y: 0.2

<AchievementScreen>:

	canvas:
		Color:
			rgb: 1,0,0

		Rectangle:
			size: self.size
			pos: self.pos
<UpgradeScreen>:

	canvas:
		Color:
			rgb: 0,1,0

		Rectangle:
			size: self.size
			pos: self.pos

<SellScreen>:
	
	GridLayout:

		rows: 7
		cols: 1

		SellItem:
			name: "Carrots"

		SellItem:
			name: "Potatoes"

<SellItem>:

	rows:1
	cols:6

	Image: 
		source: "images/" + self.parent.name + ".png"
	
	Label: 
		text: "Storage: "+ str(trunc2(app.game_state.storage[self.parent.name]["amount"]))

	Label:
		text: str(trunc2(app.game_state.prices[self.parent.name]["buy"])) + "/acre"

	Label:
		text: str(trunc2(app.game_state.prices[self.parent.name]["buy_tendency"]))

	Label:
		text: str(trunc2(app.game_state.prices[self.parent.name]["sell"])) + "/ton"

	Label:
		text: str(trunc2(app.game_state.prices[self.parent.name]["sell_tendency"]))

<WeatherDisplay>:

	rows: 1
	cols: 9

	Image:
		source: "images/Sun.png"
	Label:
		text: str(app.game_state.weather.sun) 
	Image:
		source: "images/" + updown(app.game_state.weather.sun_tendency) + ".png"
	Image:
		source: "images/Rain.png"
	Label:
		text: str(app.game_state.weather.rain)
	Image:
		source: "images/" + updown(app.game_state.weather.rain_tendency) + ".png"
	Image:
		source: "images/Temperature.png"
	Label:
		text: str(app.game_state.weather.temperature) + "°C"
	Image:
		source: "images/" + updown(app.game_state.weather.temperature_tendency) + ".png"

	
<FarmScreen>:
	GridLayout:

		rows: 2
		cols: 1

		GridLayout:

			rows: 2
			cols: 1

			size_hint_x: 1.0
			size_hint_y: 0.33

			GridLayout:

				size_hint_x: 1.0
				size_hint_y: 0.5
			
				rows: 1
				cols: 3

				Label:
					text: str(trunc2(app.game_state.money)) + "€"

				Label:
					text: app.game_state.date.getStringRep()


				PlantSelection:

			WeatherDisplay:
				
				size_hint_x: 1.0
				size_hint_y: 0.5

		AnchorLayout:
			size_hint_x: 1.0
			size_hint_y: 0.66

			canvas: 
				Rectangle:
					source: "images/meaddow_bg.png"
					size: self.size

			FarmField:
				id: farm


<FarmPlot>:
	canvas:
		Rectangle:
			pos: self.pos
			size: self.size
			source: "images/" + app.game_state.plots[self.index].plant.name + ".png"

<FarmField>:

	canvas:
		Rectangle:
			size: self.size
			pos: self.pos
			source: "images/meaddow.png"

	padding: 32
	spacing: 32
	
	rows: 3
	cols: 3

	size_hint: None, None
	height: min(self.parent.width,self.parent.height)
	width: min(self.parent.width,self.parent.height)

	FarmPlot:
		index: 0
	FarmPlot:
		index: 1
	FarmPlot:
		index: 2
	FarmPlot:
		index: 3
	FarmPlot:
		index: 4
	FarmPlot:
		index: 5
	FarmPlot:
		index: 6
	FarmPlot:
		index: 7
	FarmPlot:
		index: 8

<PlantSelection>:

	canvas:
		Rectangle:
			pos: self.pos
			source: "images/" + app.game_state.plant_selection + ".png"
