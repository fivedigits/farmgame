#:kivy 1.9.1
#:import trunc math.trunc

<VeggieScreen>:

	Widget:
		canvas:
			Rectangle:
				size: self.size
				pos: self.pos
<FarmScreen>:

	farm: farmfield

	GridLayout:

		rows: 2
		cols: 1


		Image:
			size_hint_x: 1.0
			size_hint_y: 0.33
			allow_stretch: True
			keep_ratio: True
			width: self.parent.width
			height: self.parent.width / self.image_ratio
			source: "images/sky2.png"

		FarmField:
			size_hint_x: 1.0
			size_hint_y: 0.66
			id: farmfield


<FarmPlot>:

	canvas:
		Rectangle: 
			source: "images/" + str(self.plant.name) + ".png"
			size: self.size
			pos: self.pos	
	Label:
		text: str(trunc(self.parent.phosphor_level))
		size: self.parent.size
		pos: self.parent.pos


<FarmField>:

	plot1: pl1
	plot2: pl2
	plot3: pl3

	plot4: pl4
	plot5: pl5
	plot6: pl6

	plot7: pl7
	plot8: pl8
	plot9: pl9
	
	AnchorLayout:
		
		
		size: self.parent.size

		GridLayout:
			canvas:
				Rectangle:
					size: self.size
					pos: self.pos
					source: "images/meaddow.png"

			padding: 32
			spacing: 32
			
			size_hint: None, None
			height: min(self.parent.width,self.parent.height)
			width: min(self.parent.width,self.parent.height)

			rows: 3
			cols: 3	

			FarmPlot:
				id: pl1

			FarmPlot:
				id: pl2

			FarmPlot:
				id: pl3

			FarmPlot:
				id: pl4
			FarmPlot:
				id: pl5

			FarmPlot:
				id: pl6

			FarmPlot:
				id: pl7

			FarmPlot:
				id: pl8

			FarmPlot:
				id: pl9


