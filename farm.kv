#:kivy 1.9.1
#:import trunc math.trunc
#:import trunc2 util.trunc2
#:import updown util.updown

<ResetButton>:

	text: "Triple tap to erase saved game"

<TitleScreen>:

	AnchorLayout:

		canvas:
			Rectangle:
				pos: self.pos
				size: self.size
				source: "images/Title.png"

		BoxLayout:

			orientation: "vertical"

			size_hint_x: 0.3
			size_hint_y: 0.8

			Label:
				text: "FarmGame"
				font_size: 32

			HelpButton:
				size_hint_y: 0.2
				text: "Help"

			ResetButton:
				size_hint_y: 0.2

<AchievementScreen>:

	canvas:
		Color:
			rgb: 1,0,0

		Rectangle:
			size: self.size
			pos: self.pos
<UpgradeScreen>:

	canvas:
		Color:
			rgb: 0,1,0

		Rectangle:
			size: self.size
			pos: self.pos

<SellScreen>:
	
	BoxLayout:

		canvas:
			Rectangle:
				source: "images/Sellscreen.png"
				pos: self.pos
				size: self.size

		spacing: 32
		padding: 32

		orientation: "vertical"

		Label:
			text: "Market"

		SellItem:
			name: "Corn"

		SellItem:
			name: "Carrots"


		SellItem:
			name: "Potatoes"

		SellItem:
			name: "Strawberry"

		SellItem:
			name: "Cauliflower"

		SellItem:
			name: "Cabbage"

<SellItem>:

	canvas:
		Rectangle:
			pos: self.pos
			size: self.size
			source: "images/Sellitembg.png"

	Image: 
		allow_stretch: True
		source: "images/" + self.parent.name + ".png"
	
	Label: 
		text: str(trunc2(app.game_state.storage[self.parent.name]["amount"])) + " tons"

	Label:
		text: str(trunc2(app.game_state.prices[self.parent.name]["sell"])) + "€/ton"

	Image:
		source: "images/" + updown(app.game_state.prices[self.parent.name]["sell_tendency"]) + ".png"

<WeatherDisplay>:

	rows: 1
	cols: 9

	Image:
		source: "images/Sun.png"
	Label:
		text: str(app.game_state.weather.sun) 
	Image:
		source: "images/" + updown(app.game_state.weather.sun_tendency) + ".png"
	Image:
		source: "images/Rain.png"
	Label:
		text: str(app.game_state.weather.rain)
	Image:
		source: "images/" + updown(app.game_state.weather.rain_tendency) + ".png"
	Image:
		source: "images/Temperature.png"
	Label:
		text: str(app.game_state.weather.temperature) + "°C"
	Image:
		source: "images/" + updown(app.game_state.weather.temperature_tendency) + ".png"

	
<FarmScreen>:
	BoxLayout:

		orientation: "vertical"

		BoxLayout:

			orientation: "vertical"

			size_hint_x: 1.0
			size_hint_y: 0.25

			canvas:
				Rectangle:
					source: "images/Sky2.png"
					size: self.size
					pos: self.pos

			BoxLayout:

				size_hint_x: 1.0
				size_hint_y: 0.5
			
				Label:
					size_hint_x: 0.2
					text: str(trunc2(app.game_state.money)) + "€"

				Label:
					size_hint_x: 0.2
					text: app.game_state.date.getStringRep()

				WeatherDisplay:

					size_hint_x: 0.6

			BoxLayout:

				FertSelection:

				PlantSelection:



		AnchorLayout:
			size_hint_x: 1.0
			size_hint_y: 0.75

			canvas: 
				Rectangle:
					source: "images/Meaddow.png"
					size: self.size

			FarmField:
				id: farm


<FarmPlot>:
	
	Image:
		allow_stretch: True
		size_hint: 1,1
		source: "images/Farmplot.png"
	Image:
		allow_stretch: True
		size_hint: 1,1
		source: "images/" + app.game_state.plots[self.parent.index].plant.name + ".png"

<FarmField>:

	padding: 32
	spacing: 32
	
	rows: 3
	cols: 3

	size_hint: None, None
	height: min(self.parent.width,self.parent.height)
	width: min(self.parent.width,self.parent.height)

	FarmPlot:
		index: 0
	FarmPlot:
		index: 1
	FarmPlot:
		index: 2
	FarmPlot:
		index: 3
	FarmPlot:
		index: 4
	FarmPlot:
		index: 5
	FarmPlot:
		index: 6
	FarmPlot:
		index: 7
	FarmPlot:
		index: 8

<FertSelection>:


	AnchorLayout:	

		size_hint_x: 0.66
		Image: 

			allow_stretch: True
			source: "images/Plant_Button.png"
			size_hint_y: 0.9

		Image:
			allow_stretch: True
			size_hint_y: 0.7
			source: "images/" + app.game_state.fert_selection + ".png"

<PlantSelection>:


	AnchorLayout:	

		size_hint_x: 0.66
		Image: 

			allow_stretch: True
			source: "images/Plant_Button.png"
			size_hint_y: 0.9

		Image:
			allow_stretch: True
			size_hint_y: 0.7
			source: "images/" + app.game_state.plant_selection + ".png"
	BoxLayout:

		size_hint_x: 0.33
		orientation: "vertical"

		Label:
			text: str(trunc2(app.game_state.prices[app.game_state.plant_selection]["buy"])) + "€"

		Image:
			source: "images/" + updown(app.game_state.prices[app.game_state.plant_selection]["buy_tendency"]) + ".png"
	

